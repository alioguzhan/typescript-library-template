{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ES2017", "ES7", "ES6", "DOM"],
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "include": ["src/**/*"]
}
